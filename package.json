{
  "name": "@modiapp/client",
  "version": "0.7.3",
  "description": "Serves as a Typescript api to @modi/server",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "index.d.ts"
  ],
  "types": "index.d.ts",
  "repository": "git://github.com/modiapp/client.git",
  "author": {
    "name": "Isaac J Benzaken",
    "email": "ikey.benz@gmail.com"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "rm -rf ./dist",
    "deploy": "yarn build && npm publish",
    "test": "jest",
    "lint": "eslint --fix"
  },
  "dependencies": {
    "socket.io-client": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/socket.io-client": "^1.4.34",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "wait-for-expect": "^3.0.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "parser": "typescript",
          "bracketSpacing": true,
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "no-unused-vars": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}